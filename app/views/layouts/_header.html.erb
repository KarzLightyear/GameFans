<header>
  <div class="container">
    <div class="game-header py-3">
      <div class="row flex-nowarp justify-content-between align-items-center border-bottom">
        <div class="col-12 text-center m-2">
          <a class="game-header-logo" href="/"><%= image_tag "gamefans-logo.png" %></a>
        </div>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="container">
      <div class="row collapse navbar-collapse justify-content-between align-items-center" id="navbarNavDropdown">
        <div class="collapse navbar-collapse border-bottom">
          <div class="col-4 justify-content-start">
            <p class="nav-link text-success">
              <% if user_signed_in? %>
              ようこそ、<%= current_user.name %>さん！
              <% end %>
            </p>
          </div>
          <ul class="col-4 navbar-nav justify-content-center">
            <% if user_signed_in? %>
              <!--カスタマーがログインしている時-->
              <li><%= link_to "Mypage", user_path(current_user), class: "fas fa-house-user nav-link text-success" %></li>
              <li><%= link_to "Games", genres_path, class: "fas fa-gamepad nav-link text-success" %></li>
              <li><%= link_to "Users", users_path, class: "fas fa-user nav-link text-success" %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-success" %></li>

            <% elsif admin_signed_in? %>
              <!--管理者がログインしている時-->
              <li><%= link_to "Addtitles", admin_genres_path, class: "fas fa-plus nav-link text-success" %></li>
              <li><%#= link_to "", , class: "" %></li>
              <li><%#= link_to "", , class: "" %></li>
              <li><%#= link_to "", , class: "" %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-success" %></li>

            <% else %>
              <!--ログインしていない時-->
              <li><%= link_to "Home", root_path, class: 'fas fa-home nav-link text-success' %></li>
              <li><%= link_to "About", about_path, class: 'fas fa-link nav-link text-success' %></li>
              <li><%= link_to "新規登録", new_user_registration_path, class: 'fas fa-user-plus nav-link text-success' %></li>
              <li><%= link_to "ログイン", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-success' %></li>
            <% end %>
          </ul>
          <div class="col-4 justify-content-end ml-5">
            <%= render 'public/searches/search_box' %>
          </div>
        </div>
      </div>
    </div>
  </nav>


</header>