<div class='container px-5 px-sm-0 mt-3'>
  <div class='row'>
    <div class='col-md-12 align-middle'>
      <%= form_with model: @contact, url: confirm_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :subject, 'ご用件' %>
          <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= f.label :message, 'お問い合わせ内容' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>
      
        <div>
          <%= f.submit '入力内容確認', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>  