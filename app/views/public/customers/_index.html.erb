<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= attachment_image_tag(customer, :profile_image, :fill, 30, 30, fallback: "no-image-icon.jpg") %></td>
        <td><%= customer.name %></td>
        <td><%= link_to 'Show', customer_path(customer), class: "customer_#{customer.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>