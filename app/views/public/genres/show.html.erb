<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>customer info</h2>
      <%#= render 'customers/info', customer: @game.customer %>
      <h2 class="mt-3">New game</h2>
      <%#= render 'form', game: Game.new %>
      <%= form_with model: Game.new, url:games_path(genre_id:@gametitle.id), local:true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <% f.label :genre_id %>
        <%= f.hidden_field :genre_id, :value => @gametitle.id %>
        <div class="form-group">
          <%= f.submit "Post", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2><%= @gametitle.name %></h2>
  		<%#= render 'show', games: @games%>
  		<table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td>
                <%= link_to customer_path(game.customer_id) do %>
                <%#= attachment_image_tag(game.customer_id, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                <% end %>
              </td>
              <td><%= link_to game.title, game_path(genre_id: @gametitle.id, id: game.id) %></td>
              <td><%= game.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>