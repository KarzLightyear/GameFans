<% if user_signed_in? %>
  <%= form_with url:searches_search_path, method: :get, local: true do |f| %>
    <%= f.text_field 'search[value]' %><br>
    <%= f.select 'search[model]', options_for_select({ "User" => "user", "Genre" => "genre" }) %>
    <%= f.select 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %><br>
    <%= f.submit :"検索" %>
  <% end %>
<% end %>