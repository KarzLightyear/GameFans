  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-icon.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
            <tr>
              <th>follows</th>
              <th>
                <%= link_to user_followers_path(@user) do %>
                  <%= @user.followings.count %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>folowers</th>
              <th>
                <%= link_to user_followers_path(@user) do %>
                  <%= @user.followers.count %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>
                <% if current_user.id != @user.id %>
                  <% if current_user.following?(@user) %>
                    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class:"btn btn-info" %>
                  <% else %>
                    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-success" %>
                  <% end %>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to 'edit', edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>games</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          <tbody>
            <% @user.games.each do |game| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', size: "40x40", fallback: "no-image-icon.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to game.title, game_path(game.id) %>
              </td>
              <td>
                <%= game.body %>
              </td>
              <td>
                コメント数：<%#= @game.game_comments.count %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>