  <div class="container px-5 px-sm-0 mt-3">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= render 'public/users/info', user: @user %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>games</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          <tbody>
            <% @user.games.each do |game| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no-image-icon.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to game.title, game_path(game.genre.id, game.id) %>
              </td>
              <td>
                <%= game.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>