<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "70x70", fallback: "no-image-icon.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th>
        <%= link_to user_followers_path(user) do %>
          <%= user.followings.count %>
        <% end %>
      </th>
    </tr>
    <tr>
      <th>folowers</th>
      <th>
        <%= link_to user_followers_path(user) do %>
          <%= user.followers.count %>
        <% end %>
      </th>
    </tr>
    <tr>
      <th>
        <% if current_user.id != user.id %>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-info" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
          <% end %>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to 'edit', edit_user_path(user), class:"btn btn-success btn-block fas fa-user-cog" %>
</div>