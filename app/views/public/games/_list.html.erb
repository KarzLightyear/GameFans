<% games.each do |game| %>
  <tr id="game_<%= game.id %>">
    <td>
      <%= link_to customer_path(game.customer) do %>
      <%= attachment_image_tag(game.customer, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
      <% end %>
    </td>
    <td><%= link_to game.title, game_path(game), class: "game_#{game.id}" %></td>
    <td><%= game.body %></td>
    <td class="favorite-btn"><%#= render "favorites/favorite-btn", game: game %></td>
    <td class="comments-count">コメント数: <%#= game.game_comments.count %></td>
  </tr>
<% end %>

  