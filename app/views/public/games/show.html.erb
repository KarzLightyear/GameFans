<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
  		<h2>game detail</h2>
  		<table class='table'>
  		  <tr id="game_<%= @game.id %>">
  		    <td><%= link_to user_path(current_user) do %>
            <%= attachment_image_tag(current_user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
            <% end %>
          </td>
          <td><%= current_user.name %></td>
          <td><%= link_to @game.title, game_path(@game) %></td>
          <td><%= @game.body %></td>
      </table>
    </div>
  </div>
</div>