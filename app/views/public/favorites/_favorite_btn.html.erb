<% if @game.favorited_by?(current_user) %>
  <%= link_to @game.favorites.count, game_favorites_path(@game.genre, @game), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to @game.favorites.count, game_favorites_path(@game.genre, @game), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>